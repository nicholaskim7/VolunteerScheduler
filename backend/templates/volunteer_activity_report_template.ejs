<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Event Management Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            flex-direction: column;
            align-items: center; /* Center content */
            margin: 20px;
        }
        .report-container {
            display: flex;
            flex-wrap: wrap; /* Allows wrapping of cards */
            justify-content: center; /* Center cards horizontally */
            gap: 20px; /* Space between cards */
        }
        .card {
            border: 1px solid black;
            padding: 16px;
            width: 300px; /* Set a fixed width for cards */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
        }
        .card h2 {
            margin: 0; /* Remove default margin */
            font-size: 1.5em; /* Adjust heading size */
        }
        .card p {
            margin: 5px 0; /* Space between paragraphs */
        }
    </style>
</head>
<body>
    <h1>Event Management Report</h1>
    <div class="report-container">
        <% data.forEach(function(record) { %>
            <div class="card">
                <h2><%= record.event_name %></h2>
                <p><strong>Description:</strong> <%= record.description %></p>
                <p><strong>Location:</strong> <%= record.location %></p>
                <p><strong>Required Skills:</strong> <%= record.required_skills %></p>
                <p><strong>Urgency:</strong> <%= record.urgency %></p>
                <p><strong>Event Date:</strong> <%= record.event_date %></p>
                <p><strong>Full Name:</strong> <%= record.full_name %></p>
            </div>
        <% }); %>
    </div>
</body>
</html>